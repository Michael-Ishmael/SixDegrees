<h1>Listing actors</h1>

<table>
  <tr>
    <th>Actor</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Film count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @actors.each do |actor| %>
  <tr>
    <td><%= actor.actor_id %></td>
    <td><%= actor.first_name %></td>
    <td><%= actor.last_name %></td>
    <td><%= link_to actor.film_count, :controller => "films",:action => "actor_films", :actor_id => actor.actor_id %></td>
    <td><%= link_to 'Show', actor %></td>
    <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
    <td><%= link_to 'Destroy', actor, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

